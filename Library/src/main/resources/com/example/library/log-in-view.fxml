<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.LogInController">
    <Label alignment="CENTER" prefHeight="44.0" prefWidth="348.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome to Library!" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="usernameTextField" promptText="Username" />
        <TextField fx:id="passwordTextField" promptText="Password" />
        <Button fx:id="logInButton" onAction="#handleLogInButton" text="Log in" />
    </HBox>
   <ImageView fitHeight="113.0" fitWidth="165.0" pickOnBounds="true" preserveRatio="true" />

</VBox>
