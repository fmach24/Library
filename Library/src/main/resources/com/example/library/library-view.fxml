<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.LibraryController">
    <!-- Nagłówek aplikacji -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Biblioteka" />

    <!-- Tabela książek -->
    <TableView fx:id="booksTable" prefWidth="550">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="250" text="Tytuł" />
            <TableColumn fx:id="authorColumn" prefWidth="200" text="Autor" />
         <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Ilość " />
        </columns>
    </TableView>

    <!-- Sekcja dodawania nowej książki -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="titleField" promptText="Tytuł książki" />
        <TextField fx:id="authorField" promptText="Autor książki" />
        <Button fx:id="addBookButton" text="Dodaj książkę" />
    </HBox>

    <!-- Przycisk usuwania książki -->
    <Button fx:id="deleteBookButton" text="Usuń wybraną książkę" />
</VBox>
