   <Pane prefHeight="117.0" prefWidth="602.0">
      <children>
         <ImageView blendMode="DARKEN" fitHeight="133.0" fitWidth="126.0" layoutX="175.0" layoutY="-4.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Zrzut ekranu 2025-02-01 175314.png" />
            </image>
         </ImageView>
         <ImageView blendMode="DARKEN" fitHeight="106.0" fitWidth="108.0" layoutX="329.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Zrzut ekranu 2025-02-02 141549.png" />
            </image>
         </ImageView>
          <CheckBox onAction="#handleShowBorrowedCheckBox" layoutX="342.0" layoutY="49.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="105.0" text="Pokaż Wypożyczone" />
         <Button layoutX="522.0" layoutY="6.0" onAction="#handleLogOutButton" prefHeight="26.0" prefWidth="66.0" style="-fx-background-color: #889E73;" text="Wyloguj">
            <effect>
               <DropShadow>
                  <input>
                     <InnerShadow>
                        <color>
                           <Color red="0.9684210419654846" green="0.9684210419654846" blue="0.9684210419654846" />
                        </color>
                     </InnerShadow>
                  </input>
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0" />
                  </color>
               </DropShadow>
            </effect>
         </Button>
      </children>

   </Pane>

    <!-- Tabela książek -->
    <TableView fx:id="booksTable" prefHeight="262.0" prefWidth="602.0" style="-fx-background-color: F4D793;">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" style="-fx-background-color: #889E73;" text="ID" />
            <TableColumn fx:id="titleColumn" prefWidth="250" style="-fx-background-color: #889E73;" text="Tytuł" />
            <TableColumn fx:id="authorColumn" prefWidth="298.4000244140625" style="-fx-background-color: #889E73;" text="Autor" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>

    <!-- Sekcja dodawania nowej książki -->
    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="602.0" spacing="10">
        <Button fx:id="addBookButton" onAction="#handleAddBookButton" style="-fx-background-color: #889E73;" text="Dodaj książkę">
         <effect>
            <DropShadow>
               <color>
                  <Color red="0.9368420839309692" green="0.8574996590614319" blue="0.5968031287193298" />
               </color>
               <input>
                  <InnerShadow>
                     <color>
                        <Color red="0.9612690210342407" green="1.0" blue="0.6499999761581421" />
                     </color>
                  </InnerShadow>
               </input>
            </DropShadow>
         </effect>
      </Button>
    </HBox>
   <effect>
      <SepiaTone level="0.82" />
   </effect>
